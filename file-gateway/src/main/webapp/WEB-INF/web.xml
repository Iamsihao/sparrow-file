<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <!--ioc 容器的location地址 可以缺省，默认为beans.xml 不要加classpath:-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/sparrow_application_context.xml</param-value>
    </context-param>
    <!--默认的全局配置文件 可以缺少，默认为 /system_config.properties 不要加classpath:-->
    <context-param>
        <param-name>configLocation</param-name>
        <param-value>/sparrow_system_config.properties</param-value>
    </context-param>


    <!--Bean容器初始化侦听器 -->
    <listener>
        <listener-class>com.sparrow.mvc.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>thumbnail</servlet-name>
        <servlet-class>com.sparrow.file.servlet.Thumbnail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>thumbnail</servlet-name>
        <url-pattern>/thumbnail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileUpload</servlet-name>
        <servlet-class>com.sparrow.file.servlet.FileUpload</servlet-class>
        <init-param>
            <param-name>timeout</param-name>
            <param-value>600</param-value>
        </init-param>
        <init-param>
            <param-name>cookieUtility</param-name>
            <param-value>cookieUtility</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUpload</servlet-name>
        <url-pattern>/file-upload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileDownLoad</servlet-name>
        <servlet-class>com.sparrow.file.servlet.FileDownLoad</servlet-class>
        <init-param>
            <param-name>cookieUtility</param-name>
            <param-value>cookieUtility</param-value>
        </init-param>

    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownLoad</servlet-name>
        <url-pattern>/file-downLoad</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>com.sparrow.mvc.DispatcherFilter</filter-class>
        <init-param>
            <param-name>except_url</param-name>
            <param-value>/file-upload,/file-downLoad</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>*</url-pattern>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>REQUEST</dispatcher>
        <!--是否使用则业务端决定，框架建议注掉-->
        <!--<dispatcher>FORWARD</dispatcher>-->
    </filter-mapping>
</web-app>